# =============================================================================
# MESA PROP TRADING ANALYZER - ENTERPRISE CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://mesa-prop-analyzer.com

# Backend API Configuration
BACKEND_URL=https://api.mesa-prop-analyzer.com
API_VERSION=v1

# Security & Authentication
JWT_SECRET=your-super-secure-jwt-secret-here
API_KEY=your-api-key-for-external-services

# Economic Calendar Configuration (JSON format)
# ECONOMIC_EVENTS_CONFIG='[{"name":"NFP","time_ny":"08:30","impact":"MUITO_ALTO"}]'
# FED_MEETING_DATES='["2024-01-31","2024-03-20","2024-05-01"]'

# CSV Template Configuration
# CSV_EXAMPLE_TEMPLATE="Ativo\tAbertura\tFechamento\t..."

# External API Keys (for future integrations)
# FINNHUB_API_KEY=your-finnhub-api-key
# FOREXFACTORY_API_KEY=your-forexfactory-api-key
# INVESTING_COM_API_KEY=your-investing-com-api-key

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/mesa_prop_db
# REDIS_URL=redis://localhost:6379

# Monitoring & Logging
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key
# AWS_CLOUDWATCH_LOG_GROUP=mesa-prop-trading-analyzer

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=csv,CSV

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Cache Configuration
CACHE_TTL_SECONDS=3600
ENABLE_CACHE=true

# Feature Flags
ENABLE_NEWS_ANALYSIS=true
ENABLE_DAILY_ANALYSIS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_ADVANCED_METRICS=true

# Finnhub API Key (para verificação de notícias)
NEXT_PUBLIC_FINNHUB_API_KEY=your-finnhub-api-key

# App Configuration
NEXT_PUBLIC_APP_NAME=Mesa Prop Trading Analyzer
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://your-app-url.com 